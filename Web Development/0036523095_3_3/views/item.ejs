<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="../images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="../vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="../styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <!-- INSERT CODE HERE -->
    <section class="section secondary-color-bg">
        <div class="centered-container">
            <h1 class="decorated-title font-secondary main-color-emphasized"><span class="main-color">Item </span>Information</h1>
            <div class="separator"></div>
        </div>
        <div class ="container centered-container">
            <div class="item-view">
                <img class="item-view-image" src="<%= itemInfo.imageurl %>"></img>
                <div class="item-view-text">
                    <div class="item-view-text-title font-secondary main-color-emphasized"> <%= itemInfo.name %> </div>
                    <hr>
                    <div class="item-view-text-property main-color">Price: <span class="item-view-text-value"><%= itemInfo['Price'] %> kn</span></div>
                    <div class="item-view-text-property main-color">Available colors: <span class="item-view-text-value"><%= itemInfo['Available colors'] %></span></div>
                    <div class="item-view-text-property main-color">Category: <span class="item-view-text-value"><%= itemInfo['Category'] %></span></div>
                    <div class="item-view-text-property main-color">Seasonal: <span class="item-view-text-value"><%= itemInfo['Seasonal'] %></span></div>       
                    <div class="item-view-text-desc font-secondary main-color"><%= itemInfo['description'] %></div>
                </div>
            </div>
        </div>
    </section>
    <section class="section secondary-color-bg">
        <div class="centered-container container">
            <h1 class="decorated-title font-secondary main-color-emphasized"><span class="main-color">Item </span>Suppliers
            <a class="link" href="./<%=itemInfo.id%>/addsupplier"><img class="icon_add_edit" src="../images/plus.png" alt="add button"></a></h1>
            <div class="separator"></div>
        </div>
        <%  if(supplierInfo.length !== 0){
                for(supplier of supplierInfo){ %>
      
            <section class="section secondary-color-bg expert_supplier_container">
                <h3 class="decorated-title font-secondary main-color-emphasized"><%= supplier.name %></h3>
                <div class="item-view-text-property main-color">E-mail: 
                    <span class="item-view-text-value"><%= supplier.email %></span></div>
                <div class="item-view-text-property main-color">Country:  
                    <span class="item-view-text-value"><%= supplier.country %></span></div>
                <div class="item-view-text-property main-color">County: 
                    <span class="item-view-text-value"><%= supplier.county %></span></div>
                <div class="item-view-text-property main-color">Supplier since: 
                    <span class="item-view-text-value"><%= supplier.suppliersince %></span></div>
                <hr>
            </section>
      
            <%  }
            }else{ %>
                <h2 class="decorated-title font-secondary main-color">No suppliers for this item! Only our ownproducts.</h2>
        <%  } %>
    </section>

        
</main>

<%- include(`partials/footer`); %>

</body>

</html>
